# Systemd unit file for sponge

[Unit]
Description=sponge
After=network.target
ConditionPathExists=/usr/share/python/python-sponge/bin/gunicorn

[Service]
Type=simple
User=sponge
Group=sponge
ExecStart=/usr/share/python/python-sponge/bin/gunicorn -w 4 -b 127.0.0.1:8080 sponge:app

[Install]
WantedBy=multi-user.target
